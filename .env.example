# $LIST Token Automation Environment Variables
# Copy to .env and fill in values

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================

# RPC endpoint (use a paid RPC for production)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Burn authority wallet (base58 encoded private key)
# This wallet must hold LIST tokens and have burn authority
BURN_AUTHORITY_SECRET=your-base58-private-key-here

# =============================================================================
# TWITTER API (for automated posting)
# =============================================================================

# Get these from developer.twitter.com
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# How often to check Polymarket (milliseconds, default: 60000 = 1 minute)
POLL_INTERVAL=60000

# Enable dry run mode (no actual burns/tweets)
DRY_RUN=false

# Webhook URL for notifications (Discord/Slack)
WEBHOOK_URL=

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Port for health check endpoint
PORT=3000

# Node environment
NODE_ENV=production
